<div class="contents row">
  <% @diaries.each do |diary| %>
    <div class="content_post" style="background-image: url(<%= diary.image %>);">
       <div class="more">
        <span><%= image_tag 'arrow_top.png' %></span>
        <ul class="more_list">
          <li>
            <%= link_to '削除', diary_path(diary.id) , method: :delete %>
          </li>
        </ul>
      </div>
      <p><%= diary.text %></p>
      <span class="name">
        <%= diary.day_num %>
      </span>
    </div>
  <% end %>
</div>